<header>
    <div class="container">
        <div class="row">
            <div class="col-md-8 mr-auto ml-auto">
                <div class="row">
                    <div class="col-3 ml-auto">
                        <div class="blog-logo">
                            <a href="{{@blog.url}}" title="{{@blog.title}}">
                                {{#if @blog.logo}} <img src="{{@blog.logo}}" alt="{{@blog.title}}" /> {{else}}<span>{{@blog.title}}</span>{{/if}} 
                            </a>
                        </div>
                    </div>
                    <div class="col-9 text-right">
                        <div class="inner">
                            <div class="navigation">
                                {{navigation}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

