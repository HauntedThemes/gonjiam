{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main id="content" class="container" role="main" data-id={{comment_id}}>
    <div class="row">
        <div class="col-md-8 mr-auto ml-auto">
            <article class="{{post_class}}">
                <h1 class="post-title">{{title}}</h1>
                <div class="post-meta">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time><span class="tags">{{tags separator=' '}}</span>
                    <div class="inner">
                        <div class="share">
                            <p>{{t "Share on:"}}</p>
                            <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;" title="{{t "Share on Facebook"}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                            <a class="twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;" title="{{t "Share on Twitter"}}"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}" class="google-plus" data-toggle="tooltip" data-placement="top" title="{{t "Share on Google+"}}"><i class="fab fa-google-plus-g" aria-hidden="true"></i></a>
                            <a href="https://www.reddit.com/submit?url={{url absolute="true"}}%2F&title={{encode title}}" data-toggle="tooltip" data-placement="top" class="reddit" title="{{t "Share on Reddit"}}"><i class="fab fa-reddit-alien" aria-hidden="true"></i></a>
                            <a href="mailto:?subject={{encode title}}&amp;body={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" class="email" title="{{t "Share by Email"}}"><i class="fa fa-envelope" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                {{#if feature_image}}
                <figure class="feature-image">
                    <img src="{{img_url feature_image}}" alt="{{name}}">
                </figure>
                {{/if}}
                <div class="editor-content">
                    {{content}}
                </div>
                <div class="post-meta">
                    <span class="tags">{{tags separator=' '}}</span>
                    <div class="inner">
                        <div class="share">
                            <p>{{t "Share on:"}}</p>
                            <a class="facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;" title="{{t "Share on Facebook"}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a>
                            <a class="twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;" title="{{t "Share on Twitter"}}"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                            <a href="https://plus.google.com/share?url={{url absolute="true"}}" class="google-plus" data-toggle="tooltip" data-placement="top" title="{{t "Share on Google+"}}"><i class="fab fa-google-plus-g" aria-hidden="true"></i></a>
                            <a href="https://www.reddit.com/submit?url={{url absolute="true"}}%2F&title={{encode title}}" data-toggle="tooltip" data-placement="top" class="reddit" title="{{t "Share on Reddit"}}"><i class="fab fa-reddit-alien" aria-hidden="true"></i></a>
                            <a href="mailto:?subject={{encode title}}&amp;body={{url absolute="true"}}" data-toggle="tooltip" data-placement="top" class="email" title="{{t "Share by Email"}}"><i class="fa fa-envelope" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </div>
                <div class="authors">
                    {{#if authors}}
                        {{#foreach authors}}
                        <section class="intro">
                            <div class="intro-meta">
                                {{#if profile_image}}
                                <figure class="intro-image">
                                    <a class="img" href="{{url}}" title="{{name}}"><img src="{{img_url profile_image}}" alt="{{name}}"></a>
                                </figure>
                                {{/if}}
                                <div class="inner">
                                    <h1><strong><a href="{{url}}">{{name}}</a></strong></h1>
                                    {{#if bio}}
                                        <p>{{bio}}</p>
                                    {{else}}
                                       <p>{{t "Please set your author's bio."}}</p>
                                    {{/if}}
                                </div>
                            </div>
                        </section>
                        {{/foreach}}
                    {{/if}}
                </div>
            </article>
            <div class="comments"><a href="#" class="btn">{{t "Write a comment"}}</a></div>
            {{#get "posts" limit="2" include="tags, author" filter="id:-{{id}}+primary_tag:{{primary_tag.slug}}"}}
                {{#if posts}}
                <div class="related-posts">
                    <h3 class="title">{{t "Related posts"}}</h3>
                    <div class="loop">
                        {{#foreach posts}}
                            {{> "loop"}}
                        {{/foreach}}
                    </div>
                </div>
                {{/if}}
            {{/get}}
        </div>
    </div>
</div>

{{#prev_post}}
    <a href="{{url}}" class="btn prev-post"><i class="fas fa-arrow-left"></i> {{title}}</a>
{{/prev_post}}

{{#next_post}}
    <a href="{{url}}" class="btn next-post">{{title}} <i class="fas fa-arrow-right"></i></a>
{{/next_post}}

{{/post}}

<div class="progress-container">
    <div class="progress" data-read='{{t "read"}}'></div>
</div>
