{{!-- The tag below means - insert everything in this file into the {body} of the default.hbs template --}}
{{!< default}}

{{!-- Everything inside the #author tags pulls data from the author --}}
<main id="content" class="container" role="main">
    <div class="row">
        <div class="col-md-8 mr-auto ml-auto">
            {{#author}}
                <section class="intro">
                    <div class="intro-meta">
                        {{#if profile_image}}
                        <figure class="intro-image">
                            <a class="img" href="{{url}}" title="{{name}}"><img src="{{img_url profile_image}}" alt="{{name}}"></a>
                        </figure>
                        {{/if}}
                        <div class="inner">
                            <h1><strong><a href="{{url}}">{{name}}</a></strong></h1>
                            {{#if bio}}
                                <p>{{bio}}</p>
                            {{else}}
                                <p>{{{t "Read <a href='{url}'>more posts</a> by this author." url=(url)}}}</p>
                            {{/if}}
                        </div>
                        <ul class="social">
                            {{#if twitter}}<li><a href="{{twitter_url}}" class="twitter" target="_blank" data-toggle="tooltip" data-placement="top" title="{{twitter}}"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>{{/if}}
                            {{#if facebook}}<li><a href="{{facebook_url}}" class="facebook" target="_blank" data-toggle="tooltip" data-placement="top" title="{{facebook}}"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>{{/if}}
                            <li><a href="#" class="github" target="_blank" data-toggle="tooltip" data-placement="top" title="GitHub"><i class="fab fa-github"></i></a></li>
                        </ul>
                    </div>
                </section>
            {{/author}}
            <h3 class="title">{{t "Posts"}}</h3>
            <div class="loop">
                {{#foreach posts}}
                    {{> "loop"}}
                {{/foreach}}
            </div>
            {{pagination}}
        </div>
    </div>
</main>