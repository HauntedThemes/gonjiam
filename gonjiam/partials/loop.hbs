{{!-- This is the post loop - each post will be output using this markup --}}
<article class="{{post_class}} item" data-id={{comment_id}}>
    <div class="post-inner-content">
        <p>
        	<a href="{{url}}" class="post-title" title="{{title}}"><strong>{{title}}</strong></a> - {{excerpt words="15"}}
        </p>
    </div>
    <div class="post-meta">
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMM YYYY"}}</time><span class="tags">{{tags limit=1}}</span>
        <div class="inner">
        	<a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" class="twitter" onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;" data-toggle="tooltip" data-placement="top" title="{{t "Share on Twitter"}}"><i class="fab fa-twitter"></i></a>
        	<a href="#" class="read-later" data-toggle="tooltip" data-placement="top" title="{{t "Read Later"}}" data-id="{{id}}"><i class="far fa-bookmark"></i></a>
        </div>
    </div>
</article>